{
	"name": "fitbit-widgets",
	"version": "0.0.1",
	"description": "Widgets for Fitbit SDK applications",
	"bin": "scripts/index.js",
	"files": [
		"dist",
		"scripts"
	],
	"scripts": {
		"prettier": "prettier scripts/**/*.js **/*.ts **/*.json **/*.md **/*.gui **/*.css -l",
		"lint": "eslint --max-warnings 0 **/*.ts",
		"check-code": "npm run lint && npm run prettier",
		"fix-code": "npm run lint -- --fix && npm run prettier -- --write",
		"build": "tsc -p src --outDir dist && node scripts/build-assets"
	},
	"author": "Sergio Morch√≥n Poveda",
	"license": "ISC",
	"devDependencies": {
		"@types/node": "^13.11.1",
		"@typescript-eslint/eslint-plugin": "^2.27.0",
		"@typescript-eslint/parser": "^2.27.0",
		"eslint": "^6.8.0",
		"eslint-config-prettier": "^6.10.1",
		"fitbit-sdk-types": "^4.3.6",
		"prettier": "^2.0.4",
		"typescript": "^3.8.3"
	}
}
